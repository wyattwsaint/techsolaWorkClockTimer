<Window x:Class="techsolaWorkClockTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:techsolaWorkClockTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:TechsolaClock/>
    </Window.DataContext>
    <TabControl>
        <TabItem Header="Work Clock">
            <Grid>
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
            <DockPanel
                    Grid.Column="1"
                    Grid.Row="1"
                    x:Name="panel"
                       Background="Green"
                       Height="70"
                       Width="400">
                <TextBlock 
                       x:Name="timeElapsed" 
                       Text= "{Binding Timer}"
                       FontSize="50" 
                       FontWeight="Normal"
                       Foreground="White"
                       HorizontalAlignment="Center" FontFamily="Stencil">
                </TextBlock>
            </DockPanel>
            <Button
                Grid.Column="1"
                Grid.Row="2"
                x:Name="startStopClock"
                Width="auto"
                Height="70"
                Background="Gray"
                Foreground="Black"
                FontSize="40"
                FontStyle="Normal" 
                >
                Start/Stop
            </Button>
            <Button
                Grid.Column="1"
                Grid.Row="3"
                x:Name="endOfDay"
                Width="400"
                Height="70"
                Background="Gray"
                Foreground="Black"
                FontSize="40"
                FontStyle="Normal"
                >
                End Of Day
            </Button>
            </Grid>
        </TabItem>
        <TabItem Header="Settings">
            
        </TabItem>




    </TabControl>
</Window>
